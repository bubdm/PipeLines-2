<Page x:Class="PipeLines.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PipeLines"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="500"
      Title="Page3">

    <StackPanel Orientation="Vertical" >
        <Label Content="Select level: HARD" Height="34" Background="#59151515" FontFamily="Arial Black" FontSize="20" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontStretch="ExtraExpanded" FontWeight="ExtraBold" Foreground="White" />
        <Grid Width="500" Height="167">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="7"  Grid.Column="0" Grid.ColumnSpan="1" Background="#4CFF0000" FontSize="100" FontFamily="Segoe Script"  Foreground="White" Margin="0,4,2,0" BorderThickness="0" Click="click7"/>
            <Button Content="8"  Grid.Column="1" Grid.ColumnSpan="1" Background="#4CFF0000" FontSize="100" FontFamily="Segoe Script" Foreground="White" Margin="2,4,2,0" BorderThickness="0" Click="click8"/>
            <Button Content="9"  Grid.Column="2" Grid.ColumnSpan="1" Background="#4CFF0000" FontSize="100" FontFamily="Segoe Script" Foreground="White" Margin="2,4,0,0" BorderThickness="0" Click="click9"/>
        </Grid>
    </StackPanel>
</Page>
